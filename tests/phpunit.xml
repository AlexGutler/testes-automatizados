<?xml version="1.0" encoding="UTF-8"?>

<phpunit bootstrap="bootstrap.php"
         colors="true"
         backupGlobals="false">
    <testsuites>
        <testsuite name="AG - Tests">
            <directory>./</directory>
        </testsuite>
    </testsuites>

    <filter>
        <whitelist>
            <directory suffix=".php">../</directory>
            <exclude>
                <directory>../tests</directory>
            </exclude>
        </whitelist>
    </filter>
</phpunit>
